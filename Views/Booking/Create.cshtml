@model HotelMVC.Models.Booking
@{
    ViewBag.Title = "Create Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Booking</h2>

<div style="max-width:450px; margin:40px auto; padding:20px;
            border-radius:10px; box-shadow:0 0 10px #ddd;">

    <h3 style="color:#6f42c1; text-align:center;">New Booking</h3>

    @using (Html.BeginForm())
    {
        <div>
            <label>Customer ID</label><br />
            @Html.TextBoxFor(m => m.CustomerId)
        </div>

        <div style="margin-top:10px;">
            <label>Room ID</label><br />
            @Html.TextBoxFor(m => m.RoomId)
        </div>

        <div style="margin-top:10px;">
            <label>Check In</label><br />
            @Html.TextBoxFor(m => m.CheckInDate)
        </div>

        <div style="margin-top:10px;">
            <label>Check Out</label><br />
            @Html.TextBoxFor(m => m.CheckOutDate)
        </div>

        <br />

        <input type="submit" value="Book"
               class="save-btn"
               style="background:#6f42c1; color:white;
                          border:none; padding:10px 18px;
                          border-radius:8px; cursor:pointer;" />
    }
</div>

<style>
    .save-btn:hover {
        background: #59339d;
    }
</style>


